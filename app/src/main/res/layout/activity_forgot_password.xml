<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ForgotPassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/gradiant_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/forgotpasswordtextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Forgot Password"
            android:textSize="30sp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/lockicon"
            android:src="@drawable/lockicon"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/forgotpasswordtextView"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/extraText"
            android:layout_below="@+id/lockicon"
            android:layout_margin="30dp"
            android:text="Please Enter Your Email Address to Reset Your Password"
            android:textSize="20sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/extraText"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            app:startIconDrawable="@drawable/person"
            app:startIconTint="@color/black">

            <EditText
                android:id="@+id/loginemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/forgotpasswordButton"
            android:layout_below="@+id/email"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#0CA676"
            android:background="@drawable/round_corners"
            android:text="Send"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backtoSignin"
            android:layout_below="@id/forgotpasswordButton"
            android:text="â† Back to Sign In"
            android:textSize="20sp"
            android:layout_marginTop="15dp"

            android:layout_centerHorizontal="true"
            >

        </TextView>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
